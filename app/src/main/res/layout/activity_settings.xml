<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="設定画面"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="端末モード"
        android:layout_marginBottom="8dp"/>

    <CheckBox
        android:id="@+id/cbTerminalMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ターミナルモード（スキャナ入力）"
        android:layout_marginBottom="24dp"/>


    <TextView android:text="APIサーバーURL" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/etApiUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="http://192.168.x.x:port/api/v2"
        android:inputType="textUri"
        android:layout_marginBottom="24dp"/>

    <TextView android:text="QR読み取りテスト" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/btnTestCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="読み取り"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <TextView android:text="NFC読み取りテスト" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="32dp">

        <Button
            android:id="@+id/btnTestNfc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="読み取り"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <Space android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnBackSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="戻る" />
        <Space android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
        <Button
            android:id="@+id/btnSaveSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:backgroundTint="#009688"/>
    </LinearLayout>
</LinearLayout>