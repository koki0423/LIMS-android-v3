<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新規貸し出し登録"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="備品番号 (表示のみ)"
        android:textColor="#757575"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/tvEquipmentId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OFS-20251101-0001"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="8dp"/>
<!--        android:background="@drawable/border_bottom_only"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="備品名 (表示のみ)"
        android:textColor="#757575"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/tvEquipmentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arduinoキット"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="8dp"/>
<!--        android:background="@drawable/border_bottom_only"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="在庫数量 (一括管理のみ操作可能)"
        android:textColor="#757575"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/tvStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="8dp"/>
<!--        android:background="@drawable/border_bottom_only"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="借受者"
        android:textColor="#757575"
        android:textSize="12sp"/>
    <EditText
        android:id="@+id/etBorrower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="NFC入力 / 手入力"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="閉じる"
            android:backgroundTint="#E0E0E0"
            android:textColor="#000000"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btnLend"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="貸出"
            android:backgroundTint="#00695C"/>
    </LinearLayout>

</LinearLayout>